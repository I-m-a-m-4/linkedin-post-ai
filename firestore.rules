rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Any authenticated+ user (including anonymous) can create an analytics event.
    // Only the admin can read the analytics events.
    match /analyticsEvents/{eventId} {
      allow create: if request.auth != null;
      allow read: if +request.auth.token.email == 'bimex4@gmail.com' && request.auth.token.email_verified;
      allow list: if request.auth.token.email == 'bimex4@gmail.com' && request.auth.token.email_verified;
      allow update, delete: if false;
    }

    // Any authenticated user can create a review.
    // Only the admin can read/list reviews.
    match /reviews/{reviewId} {
      allow create: if request.auth != null;
      allow read, list: if request.auth.token.email == 'bimex4@gmail.com' && request.auth.token.email_verified;
      allow update, delete: if false;
    }
  }
}
